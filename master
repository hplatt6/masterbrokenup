<body>
  <div class="dashboard">
    <h2>Welcome, <span data-ms-member="email">[email]</span></h2>

    <div class="info-box">
      <strong>Your Master ID:</strong>
      <span data-ms-member="masterID" id="master-id">[masterID]</span>
    </div>

    <div id="surveys">
      <h3>Your Surveys</h3>
      <ul id="survey-links">
        <li>Loading survey links...</li>
      </ul>
    </div>

    <div id="reports" style="margin-top: 2rem;">
      <h3>Your Report</h3>
      <p>
        <a id="report-link" href="#" target="_blank">Click here to view your report</a>
      </p>
    </div>
  </div>

  <script>
    MemberStack.onReady.then(function(member) {
      const masterID = member["masterID"];
      const reportBaseURL = "https://drive.google.com/your-folder/"; // Update this!
      const reportFileName = `${masterID}_report.pdf`;
      const reportURL = `${reportBaseURL}${reportFileName}`;

      // Update the report link
      document.getElementById("report-link").href = reportURL;

      // Define your Qualtrics base URLs
      const surveyBaseURLs = [
        "https://your.qualtrics.com/jfe/form/SV_survey1",
        "https://your.qualtrics.com/jfe/form/SV_survey2",
        "https://your.qualtrics.com/jfe/form/SV_survey3"
      ];

      // Generate survey links with masterID
      const linksHTML = surveyBaseURLs.map((url, index) => {
        const fullUrl = `${url}?masterID=${masterID}`;
        return `<li><a href="${fullUrl}" target="_blank">Survey ${index + 1}</a></li>`;
      }).join("");

      document.getElementById("survey-links").innerHTML = linksHTML;
    });
  </script>
